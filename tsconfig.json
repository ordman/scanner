{
  "compilerOptions": {
    "module": "AMD",
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/scanner.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}